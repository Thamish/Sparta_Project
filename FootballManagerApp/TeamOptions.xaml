<Page x:Class="FootballManagerApp.TeamOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FootballManagerApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="TeamOptions">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Background.jpg"/>
        </Grid.Background>
        <Button x:Name="Home" Content="Home" HorizontalAlignment="Left" Height="47" Margin="10,10,0,0" VerticalAlignment="Top" Width="66" FontSize="16" Click="Home_Click"/>
        <Button x:Name="AddTeamButton" Content="Add Team" HorizontalAlignment="Left" Height="68" Margin="161,232,0,0" VerticalAlignment="Top" Width="139" FontSize="18" Click="AddTeamButton_Click"/>
        <Button x:Name="EditTeamButton" Content="Edit Team" HorizontalAlignment="Left" Height="68" Margin="503,232,0,0" VerticalAlignment="Top" Width="139" FontSize="18" Click="EditTeamButton_Click"/>
        <Button x:Name="RemoveTeamButton" Content="Remove Team" HorizontalAlignment="Center" Height="68" Margin="0,356,0,0" VerticalAlignment="Top" Width="140" FontSize="18" Click="RemoveTeamButton_Click"/>
    </Grid>
</Page>
