<Page x:Class="FootballManagerApp.PlayerOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FootballManagerApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PlayerOptions">
    <Page.Background>
        <ImageBrush ImageSource="/Background.jpg"/>
    </Page.Background>

    <Grid>
        <Button x:Name="Home" Content="Home" HorizontalAlignment="Left" Height="47" Margin="10,10,0,0" VerticalAlignment="Top" Width="66" FontSize="16" Click="Home_Click"/>
        <Button x:Name="AddPlayerButton" Content="Add Player" HorizontalAlignment="Left" Height="68" Margin="173,245,0,0" VerticalAlignment="Top" Width="139" FontSize="18" Click="AddPlayerButton_Click"/>
        <Button x:Name="EditPlayerButton" Content="Edit Player" HorizontalAlignment="Left" Height="68" Margin="482,245,0,0" VerticalAlignment="Top" Width="138" FontSize="18" Click="EditPlayerButton_Click"/>
        <Button x:Name="RemovePlayerButton" Content="Remove Player" HorizontalAlignment="Center" Height="68" Margin="0,350,0,0" VerticalAlignment="Top" Width="140" FontSize="18" Click="RemovePlayerButton_Click"/>
    </Grid>
</Page>
