<Page x:Class="FootballManagerApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FootballManagerApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage">

    <Grid Height="600">
        <Grid.Background>
            <ImageBrush ImageSource="/Background.jpg"/>
        </Grid.Background>
        <Button x:Name="PlayersButton" Content="Players" HorizontalAlignment="Center" Height="84" VerticalAlignment="Center" Width="240" FontSize="36" FontFamily="Rockwell" Click="PlayersButton_Click"/>
        <Button x:Name="TeamsButton" Content="Teams" HorizontalAlignment="Center" Height="84" Margin="0,402,0,0" VerticalAlignment="Top" Width="240" FontSize="36" FontFamily="Rockwell" Click="TeamsButton_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0" Text="FOOTBALL MANAGER" TextWrapping="Wrap" VerticalAlignment="Top" Height="99" Width="560" FontFamily="Impact" Foreground="White" FontSize="72"/>

    </Grid>
</Page>
